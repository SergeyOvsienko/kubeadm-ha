---
apiVersion: kubeadm.k8s.io/v1beta1
kind: JoinConfiguration
discovery:
  bootstrapToken:
    token: {{ hostvars['init']['token'] }}
    apiServerEndpoint: "{{ hostvars['init']['internalLB'] }}:6443"
    caCertHashes:
      - "{{ hostvars['init']['hash'] }}"
nodeRegistration:
  kubeletExtraArgs:
    cloud-provider: aws
    node-labels: "{{ workerNodeLables }}"